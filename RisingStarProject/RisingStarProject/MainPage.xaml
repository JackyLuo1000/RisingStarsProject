<Page
    x:Class="RisingStarProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RisingStarProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Header"
                Background="LightGray"
                Text="My Recipe Book"
                TextAlignment="Center"
                FontSize="65"
                Height="100"
                Margin="0,0,0,0"
                VerticalAlignment="Top" 
                BorderBrush="Black"
                BorderThickness="4"
                Grid.ColumnSpan="2"/>
        
        <TextBox x:Name="Search"
                Grid.Column="0"
                Background="White"
                Text="Search"
                TextAlignment="Left"
                FontSize="65"
                Height="100"
                Width="400"
                Margin="170,150,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" 
                BorderBrush="Black"
                 >
        </TextBox>
        
        <Button x:Name="CreateRecipe"
                Grid.Column="0"
                FontSize="65"
                Height="100"
                Width="520"
                Margin="170,300,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" 
                BorderBrush="Black" 
                Background="LightGray"
                Content="New Recipe"
                Tapped="CreateRecipe_Tapped"
                >
        </Button>
        
        <Button ToolTipService.ToolTip="Alignment"
                Name="btnList" 
                Grid.Column="0" 
                Margin="50,150,0,0"
                FontSize="65"
                Height="100"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" 
                BorderBrush="Black" 
                Background="LightGray">
            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE8E4;"/>
                <Button.Flyout>
                <MenuFlyout Placement="Left">
                    <MenuFlyoutItem Name="mfiName" Text="Right" Icon="AlignRight" Tag="right"
                            Click=""/>
                        <MenuFlyoutItem Name="mfiIngredient" Text="Right" Icon="AlignRight" Tag="right"
                            Click=""/>
                        <MenuFlyoutItem Name="mfiType" Text="Right" Icon="AlignRight" Tag="right"
                            Click=""/>
                    </MenuFlyout>
                </Button.Flyout>
        </Button>

        <Button Name="btnSearch" 
                Content="⌕"
                Grid.Column="0" 
                Margin="590,150,0,0"
                FontSize="65"
                Height="100"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" 
                BorderBrush="Black" 
                Background="LightGray"
                >
        </Button>
        
        <ListBox Name="lbDisplay"
                 Grid.Column="1"
                 BorderBrush="Black"
                 BorderThickness="2"
                 Margin="20 115 20 20">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Button Content="" Grid.Column="0" Click=""></Button>
                        <TextBlock Text="{Binding}" Grid.Column="1"></TextBlock >
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
