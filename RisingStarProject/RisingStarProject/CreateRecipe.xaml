<Page
    x:Class="RisingStarProject.CreateRecipe"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RisingStarProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBox x:Name="Header"
                Background="LightGray"
                Text="Create a Recipe"
                TextAlignment="Center"
                FontSize="65"
                Height="100"
                Margin="0,0,0,0"
                VerticalAlignment="Top" 
                BorderBrush="Black"
                BorderThickness="4"/>
        <TextBox x:Name="RecipeNameTextBox"
                Grid.Column="0"
                Background="LightGray"
                Text="Name of Recipe"
                TextAlignment="Center"
                FontSize="65"
                Height="100"
                Width="700"
                Margin="0,150,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top" 
                BorderBrush="Black">
        </TextBox>
        <StackPanel x:Name="Fields"
                    Orientation="Horizontal"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Height="100"
                    Margin="50 300 50 0">
            <TextBox x:Name="IngredientNameTextBox"
                     Grid.Column="0"
                Background="LightGray"
                Text="Name"
                TextAlignment="Center"
                FontSize="50"
                Width="350"
                Margin="0,0,50,0"
                HorizontalAlignment="Center"
                BorderBrush="Black">
            </TextBox>
            <TextBox x:Name="TypeTextBox"
                     Grid.Column="0"
                Background="LightGray"
                Text="Type"
                TextAlignment="Center"
                FontSize="50"
                Width="350"
                Margin="0,0,50,0"
                HorizontalAlignment="Center"
                BorderBrush="Black">
            </TextBox>
            <TextBox x:Name="QuantityTextBox"
                     Grid.Column="0"
                Background="LightGray"
                Text="Quantity"
                TextAlignment="Center"
                FontSize="50"
                Margin="0,0,50,0"
                Width="225"
                HorizontalAlignment="Center"
                BorderBrush="Black">
            </TextBox>
            <TextBox x:Name="MeasurementTextBox"
                     Grid.Column="0"
                Background="LightGray"
                Text="Measurement"
                TextAlignment="Center"
                FontSize="50"
                Width="325"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                BorderBrush="Black">
            </TextBox>
        </StackPanel>

        <Button x:Name="Add"
                FontSize="65"
                Height="100"
                Width="500"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
                BorderBrush="Black" 
                Background="LightGray"
                Content="Add Ingredient"
                Tapped="AddIngedient_Tapped">
        </Button>

        <StackPanel x:Name="OptionsPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Height="100"
                    Margin="250 0 250 50">
            <Button x:Name="BackToMenu"
                FontSize="50"
                Height="100"
                Width="400"
                Margin="0 0 200 0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" 
                BorderBrush="Black" 
                Background="LightGray"
                Content="Back to Menu"
                Tapped="BackToMenu_Tapped"/>

            <Button x:Name="SaveRecipe"
                FontSize="50"
                Height="100"
                Width="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
                BorderBrush="Black" 
                Background="LightGray"
                Content="Save Recipe"
                Tapped="SaveRecipe_Tapped"/>

        </StackPanel>
    </Grid>
</Page>
